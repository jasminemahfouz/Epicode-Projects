@model Hotels.Models.Camera

@{
    ViewData["Title"] = "Dettagli Camera";
}

<div class="container mt-5">
    <h2>Dettagli Camera</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Camera</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descrizione)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descrizione)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Tipologia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tipologia)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Prezzo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Prezzo)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100">Modifica</a>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Indietro</a>
    </div>
</div>
