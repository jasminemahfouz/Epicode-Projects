@model Pizzacode.Models.Pizza

<div class="container mt-5">
    <h2>Modifica Pizza</h2>

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">URL Immagine</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Prezzo</label>
                    <input asp-for="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryTime" class="control-label">Tempo di Consegna</label>
                    <input asp-for="DeliveryTime" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Ingredients" class="control-label">Ingredienti</label>
                    <textarea asp-for="Ingredients" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Salva</button>
            </form>
        </div>
    </div>
</div>
