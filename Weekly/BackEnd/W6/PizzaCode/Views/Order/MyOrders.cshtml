@model IEnumerable<Pizzacode.Models.Order>

@{
    ViewData["Title"] = "I Miei Ordini";
}

<div class="container mt-4">
    <h2 class="mb-4">I Miei Ordini</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Data</th>
                <th>Indirizzo</th>
                <th>Note</th>
                <th>Dettagli</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CreatedAt.ToShortDateString()</td>
                    <td>@order.Address</td>
                    <td>@order.Notes</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-orderId="@order.Id" class="btn btn-info btn-sm">Dettagli</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
