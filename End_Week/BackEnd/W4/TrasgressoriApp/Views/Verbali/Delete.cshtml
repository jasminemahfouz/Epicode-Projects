@model Verbale

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Verbale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero Verbale
        </dt>
        <dd class="col-sm-10">
            @Model.NumeroVerbale
        </dd>
        <dt class="col-sm-2">
            Data Verbale
        </dt>
        <dd class="col-sm-10">
            @Model.DataVerbale
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ViolazioneId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-violazioneId="@Model.ViolazioneId" asp-route-trasgressoreId="@ViewBag.TrasgressoreId">Back to List</a>
    </form>
</div>
