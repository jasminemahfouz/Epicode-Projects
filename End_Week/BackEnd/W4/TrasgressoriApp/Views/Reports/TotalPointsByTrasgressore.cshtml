@model IEnumerable<TotalPointsViewModel>

@{
    ViewData["Title"] = "Totale Punti per Trasgressore";
}

<h1>Totale Punti per Trasgressore</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Totale Punti</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.TotalePunti</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to Reports</a>
</div>
