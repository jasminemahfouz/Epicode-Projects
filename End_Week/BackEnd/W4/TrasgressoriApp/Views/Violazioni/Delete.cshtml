@model Violazione

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Violazione</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descrizione
        </dt>
        <dd class="col-sm-10">
            @Model.Descrizione
        </dd>
        <dt class="col-sm-2">
            Data Violazione
        </dt>
        <dd class="col-sm-10">
            @Model.DataViolazione
        </dd>
        <dt class="col-sm-2">
            Importo
        </dt>
        <dd class="col-sm-10">
            @Model.Importo
        </dd>
        <dt class="col-sm-2">
            Punti Decurtati
        </dt>
        <dd class="col-sm-10">
            @Model.PuntiDecurtati
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="TrasgressoreId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-trasgressoreId="@Model.TrasgressoreId">Back to List</a>
    </form>
</div>
