@model IEnumerable<Violazione>

@{
    ViewData["Title"] = "Violazioni";
}

<h1>Violazioni</h1>

<p>
    <a asp-action="Create" asp-route-trasgressoreId="@ViewBag.TrasgressoreId">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Descrizione</th>
            <th>Data Violazione</th>
            <th>Importo</th>
            <th>Punti Decurtati</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Descrizione)</td>
            <td>@Html.DisplayFor(modelItem => item.DataViolazione)</td>
            <td>@Html.DisplayFor(modelItem => item.Importo)</td>
            <td>@Html.DisplayFor(modelItem => item.PuntiDecurtati)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-action="Details" asp-controller="Trasgressori" asp-route-id="@ViewBag.TrasgressoreId">Back to Trasgressore</a>
</div>
