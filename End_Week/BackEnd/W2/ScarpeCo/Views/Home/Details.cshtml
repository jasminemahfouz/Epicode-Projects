@model ScarpeCo.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="bg-white shadow-md rounded-lg p-8">
    <h2 class="text-3xl font-semibold mb-4">@Model.Name</h2>
    <p class="text-xl text-gray-700 mb-4">@string.Format("{0:0.00} €", Model.Price)</p>
    <p class="text-gray-600 mb-8">@Model.Description</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <img src="@Model.CoverImage" class="w-full h-48 object-cover rounded" alt="@Model.Name">
        <img src="@Model.AdditionalImage1" class="w-full h-48 object-cover rounded" alt="@Model.Name">
        <img src="@Model.AdditionalImage2" class="w-full h-48 object-cover rounded" alt="@Model.Name">
    </div>

    @if (!Model.IsPurchased)
    {
        <form asp-action="Purchase" method="post" class="mt-4">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="submit" value="Acquista" class="bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700" />
        </form>
    }
    else
    {
        <span class="bg-gray-300 text-gray-700 py-2 px-4 rounded inline-block">Acquistato</span>
    }

    <a href="@Url.Action("Index", "Home")" class="mt-8 inline-block bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">Torna alla Vetrina</a>
</div>
