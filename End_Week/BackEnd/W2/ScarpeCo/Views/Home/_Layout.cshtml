<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scarpe & Co</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">
    <nav class="bg-white shadow-md py-4">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div class="flex">
                    <a class="navbar-brand text-3xl font-bold text-blue-600" href="@Url.Action("Index", "Home")">Scarpe & Co</a>
                </div>
                <div class="flex space-x-6 text-xl">
                    <a class="nav-link text-gray-700 hover:text-blue-600" href="@Url.Action("Index", "Home")">Home</a>
                    <a class="nav-link text-gray-700 hover:text-blue-600" href="@Url.Action("Purchases", "Home")">I Miei Acquisti</a>
                    <a class="nav-link text-gray-700 hover:text-blue-600" href="@Url.Action("Create", "Home")">Aggiungi Prodotto</a>
                    <a class="nav-link text-gray-700 hover:text-blue-600" href="@Url.Action("Admin", "Home")">Admin</a>
                    <a class="nav-link text-gray-700 hover:text-blue-600" href="@Url.Action("Privacy", "Home")">About</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mx-auto p-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-white border-t mt-4 py-4 text-center text-sm text-gray-500">
        <div class="container mx-auto">
            &copy; 2024 - Scarpe & Co di Yasmin Mahfouz - <a href="@Url.Action("Privacy", "Home")" class="text-blue-600 hover:text-blue-800">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
